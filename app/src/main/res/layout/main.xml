<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Monitor_Main"
                    android:textSize="60dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:layout_gravity="bottom" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Monitor_Sub"
                    android:textSize="60dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:layout_gravity="bottom" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:id="@+id/btn7"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:id="@+id/btn8"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9"
                            android:id="@+id/btn9"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:id="@+id/btnA"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:id="@+id/btn4"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:id="@+id/btn5"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:id="@+id/btn6"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/btnS"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:id="@+id/btn1"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:id="@+id/btn2"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:id="@+id/btn3"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"
                            android:id="@+id/btnM"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/btn0"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="."
                            android:id="@+id/btnDo"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C"
                            android:id="@+id/btnC"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="÷"
                            android:id="@+id/btnD"
                            android:layout_weight="1"
                            android:textSize="40dp"
                            android:background="@color/amber"
                            android:layout_margin="2dp"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="="
                        android:id="@+id/btnAss"
                        android:textSize="40dp"
                        android:background="@color/amber"
                        android:layout_margin="2dp"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>